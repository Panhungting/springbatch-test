<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koiwaLearning.api.mapper.CoursesMapper">

    <resultMap id="BaseReultMap" type="com.koiwaLearning.api.domain.Courses">
        <result column="cno" jdbcType="VARCHAR" property="cno"/>
        <result column="cname" jdbcType="VARCHAR" property="cname"/>
        <result column="tno" jdbcType="VARCHAR" property="tno"/>
    </resultMap>

    <select id="findCourses" resultMap="BaseReultMap">
        SELECT * FROM courses;

    </select>

    //追加
    <select id="insertCourses" parameterType="com.koiwaLearning.api.domain.Courses">
        INSERT INTO courses(
        cno,cname,tno )
        VALUE(
        #{cno},#{cname},#{tno}
        );

    </select>


</mapper>